<root>
    <styles>
		<include src="file://{resources}/layout/custom_game/frames/end_screen/end_screen.css" />
    </styles>
    <snippets>
		<snippet name="item">
			<Panel class="item" hittestchildren="false">
				<Panel id="tooltip"/>
				<DOTAItemImage id="item-img" />
			</Panel>
		</snippet>
	</snippets>
	<Panel class="PlayerRow">
		<Panel id="PlayerRowContainer">
            <Panel id="RankContainer" class="ScoreCol_Rank ScoreboardPanel">
				<Label id="Rank" text="0" />
			</Panel>
			<Panel id="avatarBackground" class="ScoreCol_Avatar ScoreboardPanel">
                <DOTAAvatarImage id="dotaUserAvatar" steamid="" />
                <Image id="imgBotAvatar" src="file://{resources}/images/custom_game/bot_avator.png" />
            </Panel>
			<Panel id="PlayerDetailsContainer" class="ScoreCol_PlayerDetails ScoreboardPanel">
				<Panel id="PlayerAndHeroName">
					<Label id="PlayerName" text="" />
					<Label id="HeroNameAndDescription" text="#custom_scoreboard_hero_name_and_desc" />
				</Panel>
			</Panel>
			<Panel id="KillsContainer" class="ScoreCol_Kills ScoreboardPanel">
				<Label id="Kills" text="0" />
			</Panel>
			<Panel id="DeathsContainer" class="ScoreCol_Deaths ScoreboardPanel">
				<Label id="Deaths" text="0" />
			</Panel>
			<Panel id="AssistsContainer" class="ScoreCol_Assists ScoreboardPanel">
				<Label id="Assists" text="0" />
			</Panel>
			<Panel id="PlayerItemsContainer" class="ScoreCol_Items ScoreboardPanel" />
			<Panel id="GoldContainer" class="ScoreCol_Gold ScoreboardPanel">
				<Label id="Gold" text="0" />
			</Panel>
			<Panel id="BullionContainer" class="ScoreCol_Bullion ScoreboardPanel">
				<Label id="Bullion" text="0" />
			</Panel>
			<Panel id="BullionSavedContainer" class="ScoreCol_Bullion ScoreboardPanel">
				<Label id="BullionJackpot" text="0" />
			</Panel>
			<Panel id="TimeContainer" class="ScoreCol_Time ScoreboardPanel">
				<Label id="PlayerTime" text="00:00:00" />
			</Panel>
			<Panel id="ScoreContainer" class="ScoreCol_Score ScoreboardPanel ScorePanel">
				<Panel class="ScorePanelRow">
					<Label id="lblScore" text="" />
				</Panel>
				<Panel class="ScorePanelRow">
					<Label id="lblScoreToUpgrade" text="" />
				</Panel>
			</Panel>
			<Panel id="GradeContainer" class="ScoreCol_Grade ScoreboardPanel">
				<Label id="lblGrade" text="" />
			</Panel>
		</Panel>
	</Panel>
</root>
