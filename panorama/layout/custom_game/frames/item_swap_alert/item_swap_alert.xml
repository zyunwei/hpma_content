<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/avalon.css" />
		<include src="file://{resources}/layout/custom_game/frames/item_swap_alert/item_swap_alert.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/layout/custom_game/frames/item_swap_alert/item_swap_alert.js" />
	</scripts>
	<snippets>
		<snippet name="swap-item-mini-frame">
			<Panel class="swap-item-mini-frame">
				<Label class="text-white" style="padding:20px 20px 0px 20px;" html="true" text="#xxwar_item_swap_alert_title" />
				<Panel class="line padding-lg itemBox">
					<Panel id="current-item" />
					<Panel id="RightArrow" />
					<Panel id="swap-item" />
				</Panel>
				<Panel id="button-list" >
					<Button id="button-yes">
						<Label text="#xxwar_item_swap_alert_confirm" />
					</Button>
					<Button id="button-cancel">
						<Label text="#xxwar_dialog_options_CANCEL" />
					</Button>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	<Panel hittest="false" class="Root" >
		<Panel id="SwapDialogList" >
		</Panel>
	</Panel>
</root>
